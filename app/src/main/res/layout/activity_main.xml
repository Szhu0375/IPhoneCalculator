<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id = "@+id/newNum"
            android:text = "0"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textSize="80sp"
            tools:ignore="DuplicateIds">

        </TextView>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="40pt"
            android:layout_height="match_parent">

            <Button
                android:id ="@+id/C"
                android:text="C"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginRight="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/plusminus"
                android:text="+/-"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/percentage"
                android:text= "%"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/slash"
                android:text= "/"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_height="match_parent">

            <Button
                android:id = "@+id/seven"
                android:text="7"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginRight="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/eight"
                android:text="8"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/nine"
                android:text="9"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/X"
                android:text= "X"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_height="match_parent">

            <Button
                android:id = "@+id/four"
                android:text="4"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginRight="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/five"
                android:text="5"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/six"
                android:text= "6"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/minus"
                android:text= "-"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_height="match_parent">

            <Button
                android:id = "@+id/one"
                android:text="1"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginRight="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/two"
                android:text="2"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/three"
                android:text="3"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>

            <Button
                android:id = "@+id/plus"
                android:text= "+"
                android:textSize = "30sp"
                android:background = "@color/blue"
                android:layout_marginHorizontal="2dp"
                android:layout_width="43pt"
                android:layout_height = "40pt">

            </Button>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            tools:ignore="MissingConstraints">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id = "@+id/zero"
                    android:text="0"
                    android:textSize = "30sp"
                    android:background = "@color/blue"
                    android:layout_width="88pt"
                    android:layout_height = "40pt">

                </Button>

                <Button
                    android:id = "@+id/period"
                    android:text="."
                    android:textSize = "30sp"
                    android:background = "@color/blue"
                    android:layout_marginHorizontal="2dp"
                    android:layout_width="43pt"
                    android:layout_height = "40pt">

                </Button>

                <Button
                    android:id = "@+id/equal"
                    android:text= "="
                    android:textSize = "30sp"
                    android:background = "@color/blue"
                    android:layout_marginHorizontal="2dp"
                    android:layout_width="43pt"
                    android:layout_height = "40pt">

                </Button>
            </TableRow>

        </LinearLayout>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>